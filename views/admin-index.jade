doctype html
html
	head
		title BPDC Notes - Admin
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(rel="stylesheet" href="bootstrap/css/bootstrap.css") 
		link(rel="stylesheet" href="styles/style.css")
		link(href="img/LogoBig.png" rel="icon" type="image") 
		link(href="img/LogoBig.png" rel="apple-touch-icon") 
		script(type="text/javascript" src="bootstrap/js/jquery.js") 
		script(type="text/javascript" src="bootstrap/js/bootstrap.js")
		script.
			$(document).ready(function(){
				$('a').tooltip();
			});
			$(window).load(function () {
				$('#TheHeading').animate({'opacity' : '1'},200);
				$('#TheHeading1').animate({'opacity' : '1'},200);
				$('#TheHeading2').animate({'opacity' : '1'},400);
				$('#TheHeading3').animate({'opacity' : '1'},600);  	
				$('#TheTagline').animate({'opacity' : '1'},900);
				$('#TheMobileLinks').animate({'opacity' : '1'},900);
				$('#TheLogo').animate({'opacity' : '1'},750);
				$('#TheLogo1').animate({'opacity' : '1'},750);
				$('#TheLogo2').animate({'opacity' : '1'},950);
				$('#TheLogo3').animate({'opacity' : '1'},1150);
			});
	body
		img(src="img/elements.jpg" class="img-responsive" style="width:100%; height:8px")
		nav(class="navbar navbar-inverse" role="navigation" style="background: #2a2a2a; padding-top: 15px; border: none; margin-bottom: 30px; padding-right: 10px")			
			a(href="/logout")
				button(type="button" class="btn btn-primary rf") Logout
			a(href="/profile")
				img.img-circle(src="img/userPlaceholder.png" style="float:right;margin:5px; margin-right:10px" height="40px")
			
			.navbar-header
				a(class="navbar-brand" href="/")
					img(src="img/bitsLight.png" height="50px; text-align:center")
					&nbsp; Birla Institute of Technology and Science, Pilani - Dubai Campus

		.row(style="width:100%")
			.col-md-4
				center
					h1#TheHeading1(style="font-family: OL; color: #38BA49; font-size: 3.5em; opacity:0") Your Notes
					a(href="/user-notes")
						img#TheLogo.img-responsive.linkedSection(src="img/LogoBig.png")
			.col-md-4
				center
					h1#TheHeading2(style="font-family: OL; color: #38BA49; font-size: 3.5em; opacity:0") Manage Notes
					a(href="/managenotes")
						img#TheLogo1.img-responsive.linkedSection(src="img/LogoBig.png" style="opacity:0")
			.col-md-4
				center
					h1#TheHeading3(style="font-family: OL; color: #38BA49; font-size: 3.5em; opacity:0") Manage users
					a(href="/manageusers")
						img#TheLogo2.img-responsive.linkedSection(src="img/user.png" style="opacity:0")
			.col-md-4
				center
					h1#TheHeading(style="font-family: OL; color: #38BA49; font-size: 3.5em; opacity:0") Manage Courses
					a(href="/managecourses")
						img#TheLogo3.img-responsive.linkedSection(src="img/courses.png" style="opacity:0")
		.row.myStickyFooter
			center Developed by Dev and Vishnu
