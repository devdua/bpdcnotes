doctype html
html
	head
		title BPDC Now
		meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
		link(rel="stylesheet" href="bootstrap/css/bootstrap.css") 
		link(rel="stylesheet" href="styles/style.css")
		link(href="img/LogoBig.png" rel="icon" type="image") 
		link(href="img/LogoBig.png" rel="apple-touch-icon") 
		script(type="text/javascript" src="bootstrap/js/jquery.js") 
		script(type="text/javascript" src="bootstrap/js/bootstrap.js")
		script.
			$(document).ready(function(){
				$('a').tooltip();
			});
			$(window).load(function () {
				$('#TheHeading').animate({'opacity' : '1'},200);
				$('#TheTagline').animate({'opacity' : '1'},900);
				$('#TheMobileLinks').animate({'opacity' : '1'},900);
				$('#TheLogo').animate({'opacity' : '1'},1750);
				$('#Android').animate({'opacity' : '1'},400);
				$('#WindowsPhone').animate({'opacity' : '1'},1000);
				$('#iOS').animate({'opacity' : '1'},1600);
			});
	body
		img(src="img/elements.jpg" class="img-responsive" style="width:100%; height:8px")
		nav(class="navbar navbar-inverse" role="navigation" style="background: #2a2a2a; padding-top: 15px; border: none; margin-bottom: 30px; padding-right: 10px")
			-if(userIn){
				a(href="/logout")
					button(type="button" class="btn btn-primary rf") Logout
				a(href="/profile")
					img.img-circle(src="img/userPlaceholder.png" style="float:right;margin:5px; margin-right:10px" height="40px")
			-}
			-else{
				a(href="/login")
					button(type="button" class="btn btn-primary rf") Login
				a(href="/register")
					button(type="button" class="btn btn-success rf") Register
			-}
			.navbar-header
				a(class="navbar-brand" href="/")
					img(src="img/bitsLight.png" height="50px; text-align:center")
					&nbsp; Birla Institute of Technology and Science, Pilani - Dubai Campus
		.row(style="width:100%")
			center
				h1#TheHeading(style="font-family: OL; color: #38BA49; font-size: 80px; opacity:0") BPDC Now
				p#TheTagline.text-center.text-primary(style="font-size: 18px;opacity:0") BPDC Student Council, Official Website
				a(href="/user-notes")
					img#TheLogo.img-responsive.linkedSection(src="img/LogoBig.png") 
		.row(style="margin-top:40px; width:100%")
			center
				p#TheMobileLinks.text-center.text-primary Looking for the smartphone apps?

				a(href="#")
					img#Android.mapp(alt="Android app on Google Play" src="https://developer.android.com/images/brand/en_app_rgb_wo_45.png") 

				a(href="#")
					img#WindowsPhone.mapp(alt="Windows Phone App on the Windows Phone Store" src="img/WPstore.png")

				a(href="#")
					img#iOS.mapp(alt="iOS App coming soon!" data-toggle="tooltip" title="Coming Soon!" src="https://devimages.apple.com.edgekey.net/app-store/marketing/guidelines/images/badge-download-on-the-app-store.svg") 

		.row.myStickyAnnouncement
			center COMING SOON! &nbsp;&nbsp; The AnnouncementHub and the AttendanceHub! We're bringing cool new, and much awaited portals for you all.
		.row.myStickyFooter
			center Developed by Dev and Vishnu
